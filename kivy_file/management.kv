<ManagementScreen>:
	BoxLayout:
		orientation: 'vertical'
		size_hint: 1, 1
		padding: 20
		spacing: 10

		Label:
			font_size: 40
			text: "[b]Photo Management[/b]"
			markup: True
			size_hint: None, None
			size: self.texture_size

		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, None
			height: 50
			spacing: 10


			Button:
				font_size: 28
				size_hint: None, None
				height: 50
				width: 300
				background_normal: ''
				background_color: (0.5, 0.5, 0.5, 1)
				text: 'Force Train Model'
				on_release: root.force_train_b()

			Button:
				font_size: 28
				size_hint: None, None
				height: 50
				width: 300
				background_normal: ''
				background_color: (0.5, 0.5, 0.5, 1)
				text: 'Force Recognize Face'
				on_release: root.force_recognize_b()

